<div class="row">
  <div class="centered six columns">
	<%= form_tag sessions_path do %>
		<div class="field">
	  		<%= label_tag "Email", "Email" %>
	  		<%= email_field_tag :email, params[:email], :class => "email input" %>
	  	</div>
	  	<div class="field">
	  		<%= label_tag "Password", "Password" %>
	  		<%= password_field_tag :password, "", :class => "password input" %>
	  	</div>
	  	<div class="actions">
	  		<div class="medium info btn"><%= submit_tag "Login" %></div> or 
	  		<%= link_to "Sign Up", new_user_path %>
	  	</div>
	<% end %>
  </div>
</div>